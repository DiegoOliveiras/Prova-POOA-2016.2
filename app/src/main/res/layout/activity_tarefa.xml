<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tarefa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diego.provapooa20162.ActivityTarefa">

    <TextView
        android:text="TÍTULO"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/txtTitulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="DESCRIÇÃO"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDesc"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:lines="5"
        android:maxLines="5"
        android:minLines="5"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/txtTitulo"
        android:layout_alignStart="@+id/txtTitulo" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtObservacoes"
        android:maxLines="5"
        android:minLines="5"
        android:hint="OBSERVAÇÕES"
        android:lines="5"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/txtDesc"
        android:layout_alignStart="@+id/txtDesc" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/error"
        android:id="@+id/btnApagar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/success"
        android:id="@+id/btnConcluir"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

</RelativeLayout>
