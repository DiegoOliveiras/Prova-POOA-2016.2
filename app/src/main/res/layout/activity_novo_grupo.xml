<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_novo_grupo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diego.provapooa20162.ActivityNovoGrupo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:srcCompat="@android:drawable/editbox_dropdown_dark_frame"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY" />

    <ImageButton
        app:srcCompat="@drawable/success"
        android:id="@+id/btnOk"
        android:layout_width="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:scaleType="centerCrop" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtDescricao"
        android:lines="5"
        android:hint="DESCRIÇÃO"
        android:maxLines="5"
        android:minLines="5"
        android:layout_below="@+id/edtNomeGrupo"
        android:layout_alignStart="@+id/edtNomeGrupo" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtNomeGrupo"
        android:layout_marginTop="74dp"
        android:hint="NOME DO GRUPO"
        android:lines="1"
        android:maxLines="1"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
